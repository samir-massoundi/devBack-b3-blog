{% extends 'base.html.twig' %}
{% block title %}Mes articles commentés
{% endblock %}
{% block body %}

	<div class="card">
		<img src"" class="card-img-top">
		<div class="card-body ">
			<span>
				<h3 class="card-title">
					<a href="/article/{{comment.article.id}}">{{comment.article.headline}}</a>
				</h3>
				<span class="categorie badge badge-pill badge-primary">{{comment.article.categorie.name}}</span>
			</span>

			<h4 class="card-subtitle">{{comment.article.auteur.pseudo}}</h4>
			<p class="card-text">{{ comment.article.articleContent}}</p>
		</div>
	</div>

	<div class="card">
		<div class="card-body text-right">
			<h3 class="card-title">Commentaire à evaluer</h3>
            <h4> de {{comment.user.pseudo}}</h4>
			<span>{{comment.content}}
			</div>
                {{ include('admin_dashboard/_form.html.twig') }}
                <hr>
                {{ include('admin_dashboard/_delete_form.html.twig') }}
            
		</div>
	</div>
{% endblock %}
