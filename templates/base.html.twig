<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block head_css %}
			<link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css">
		{% endblock %}
		{% block stylesheets %}{% endblock %}

		{% block head_js %}{% endblock %}
		{% block javascripts %}
			<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
		{% endblock %}

	</head>


	<body class=" ">
		{% include "navbar.html.twig" %}
		<main class="container">
			{% block body %}
                <h1 class="text-center">Derniers Articles</h2>
                <br><br>
				{% for article in articles %}
                    <section class="info-article">
                        
                        <h4 class="headline"> <a href="/article/{{article.id}}">{{article.headline}}</a> </h3>
                        <h5 class="subheadline">{{article.subheadline}}</h4>
                        <span class="author">par {{article.auteur.pseudo}}</span>
                        <span class="date">{{ article.createdAt ? article.createdAt|date('d-m-Y H:i:s') : '' }}</span>
                        <span class="categorie badge badge-pill badge-primary">{{article.categorie.name}}</span>
                        <p class="content">{{ article.articleContent|slice (0, 150)}}[...]</p>
                    </section>
                    <section class="reactions">
                        <button type="button" class="btn btn-outline-primary btn-sm">Like</button>
                        <button type="button" class="btn btn-outline-primary btn-sm">Share</button>
                    </section>
                    <hr>
                {% endfor %}
                {{ knp_pagination_render(articles) }}
			{% endblock %}
			<footer id="sticky-footer" class="py-4 bg-grey text-white-50">
				<div class="container text-center">
					<small>
						&copy;  Samir Massoundi - Tout droits reserv√©s</small>
				</div>
			</footer>

		</main>

	</body>

</html>
