{% extends 'base.html.twig' %}
{% block title %}Mes articles likés
{% endblock %}
{% block body %}
        <h1>Mes articles likés</h1>


<div class="row">
		<div class="col-sm-12 col-lg-3">
			{% include 'dashboard/aside.html.twig' %}
		</div>
		<div class="col-sm-12 col-lg-9">
        {% if liked|length == 0 %}
				<h3>Aucun J'aime en vue. C'est à croire que ce blog ne vous plait pas...</h3>
		{% else %}
            {% for like in liked %}
				<div class="card">
					<img src"" class="card-img-top">
					<div class="card-body">
                        <span> <h3 class="card-title"> <a href="/article/{{like.article.id}}">{{like.article.headline}}</a></h3>
                            <span class="categorie badge badge-pill badge-primary">{{like.article.categorie.name}}</span> 
                        </span>

						<h4 class="card-subtitle">{{like.article.auteur.pseudo}}</h3>
						<p class="card-text">{{ like.article.articleContent|slice (0, 100)}}[...]</p>
					</div>
				</div>
            {{ knp_pagination_render(liked) }}

			{% endfor %}
        
        </div>
        {% endif %}
</div>
{% endblock %}
